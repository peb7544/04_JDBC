<properties>
<comment>query.xml file!!</comment>

	<entry key="selectAll">
		SELECT 
			 EMP_ID 
			,EMP_NAME 
			,EMP_NO 
			,EMAIL
			,PHONE 
			,NVL(DEPT_TITLE,'부서없음') DEPT_TITLE
			,JOB_NAME
			,SALARY 
		FROM EMPLOYEE
		LEFT JOIN DEPARTMENT ON(DEPT_CODE = DEPT_ID)
		JOIN JOB USING(JOB_CODE)
		ORDER BY EMP_ID
	</entry>
	
	<entry key="insertEmployee">
		INSERT INTO EMPLOYEE VALUES(?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, SYSDATE, NULL, DEFAULT)
	</entry>
	
	<entry key="selectEmpId">
		SELECT 
			 EMP_ID 
			,EMP_NAME 
			,EMP_NO 
			,EMAIL
			,PHONE 
			,NVL(DEPT_TITLE,'부서없음') DEPT_TITLE
			,JOB_NAME
			,SALARY 
		FROM EMPLOYEE
		LEFT JOIN DEPARTMENT ON(DEPT_CODE = DEPT_ID)
		JOIN JOB USING(JOB_CODE)
		WHERE EMP_ID = ?
	</entry>
	
	<entry key="updateEmployee">
		UPDATE EMPLOYEE SET 
		EMAIL = ?, 
		PHONE = ?,
		SALARY = ?
		WHERE EMP_ID = ?
	</entry>
	
	<entry key="deleteEmployee">
		DELETE FROM EMPLOYEE
		WHERE EMP_ID = ?
	</entry>
	
	<!-- 입력받은 부서와 일치하는 모든 사원 정보 조회 -->
	<entry key="selectDeptEmp">
		SELECT 
			 EMP_ID 
			,EMP_NAME 
			,EMP_NO 
			,EMAIL
			,PHONE 
			,NVL(DEPT_TITLE,'부서없음') DEPT_TITLE
			,JOB_NAME
			,SALARY 
		FROM EMPLOYEE
		LEFT JOIN DEPARTMENT ON(DEPT_CODE = DEPT_ID)
		JOIN JOB USING(JOB_CODE)
		WHERE DEPT_TITLE = ?
		ORDER BY EMP_ID
	</entry>
	
	<!-- 입력받은 급여 이상을 받는 모든 사원 정보 조회 -->
	<entry key="selectSalaryEmp">
		SELECT 
			 EMP_ID 
			,EMP_NAME 
			,EMP_NO 
			,EMAIL
			,PHONE 
			,NVL(DEPT_TITLE,'부서없음') DEPT_TITLE
			,JOB_NAME
			,SALARY 
		FROM EMPLOYEE
		LEFT JOIN DEPARTMENT ON(DEPT_CODE = DEPT_ID)
		JOIN JOB USING(JOB_CODE)
		WHERE SALARY >= ?
		ORDER BY EMP_ID
	</entry>
	
	<!-- 부서별 급여 합 전체 조회 -->
	<entry key="selectDeptTotalSalary">
		SELECT 
			 NVL(DEPT_CODE,'부서없음') DEPT_CODE
			,SUM(SALARY) 
		FROM EMPLOYEE
		GROUP BY DEPT_CODE
		ORDER BY DEPT_CODE
	</entry>
	
</properties>
